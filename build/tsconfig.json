{
  "extends": "../tsconfig",
  "compilerOptions": {
    /**
     * Emit
     *
     * - emit `declaration`s
     * - `noEmit` false so we get output
     * - emit to `outDir` of `.dist`
     */
    "declaration": true,
    "noEmit": false,
    "outDir": ".dist"
  },
  /**
   * Exclude `*.test.ts` files anywhere plus any files in a `test` directory
   */
  "exclude": ["**/*.test.ts", "**/test/**/*"]
}
